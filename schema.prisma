generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}



model User {
  id         Int         @id @default(autoincrement())
  nama       String
  username   String      @unique
  password   String
  role Role
  presensi Presensi[]
}
model Presensi {
  id        Int         @id @default(autoincrement())
  userID    Int
  date      DateTime    @db.Date
  time      DateTime    @db.Time(0)
  status    Status
  user      User      @relation(fields: [userID], references: [id])
}

enum Role {
  Siswa
  Karyawan
}

enum Status {
  Hadir
  Izin
  Sakit 
  Alpha
}


